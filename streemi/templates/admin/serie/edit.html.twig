{% extends 'base_admin.html.twig' %}

{% block title %}Modifier {{ serie.title }}{% endblock %}

{% block admin %}
    <section>
        <h1 class="text-lg font-medium text-black mb-9">Modifier <span class="font-bold text-red-600">{{ serie.title }}</span></h1>
        <a href="{{ path('page_admin_serie_index') }}" class="underline decoration-2 decoration-red-400 hover:text-red-600 inline-flex items-center"><svg class="fill-current h-4 w-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><title>arrow-left</title><path d="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"></path></svg> Revenir à la liste des series</a>
    </section>

    {{ include('admin/serie/_form.html.twig', {'button_label': 'Modifier la serie'}) }}

    {{ include('admin/serie/_delete_form.html.twig') }}

    <div class="border-t border-gray-200 mt-8"></div>

    <div class="relative flex space-x-3">
        <h2 class="text-lg font-medium text-black mt-8">Les <span class="font-bold text-red-600">Saison</span></h2>
    </div>

    {% for season in serie.seasons %}
        <h3 class="text-xl font-medium text-black mt-8 mb-4">#{{ loop.index }} - {{ season.number }}</h3>

        <ul>
            {% for episode in season.episodes %}
                <li class="flex items-center mb-4 bg-gray-100 rounded-md p-2">
                    <div class="flex flex-col flex-1">
                        <span>{{ episode.title }} <small>({{ episode.duration }} mins)</small></span>
                        <span class="text-gray-500 text-xs mt-2">{{ episode.description }}</span>
                    </div>
                    <a href="" class="bg-orange-600 hover:bg-orange-700 transition text-white p-1 text-xs rounded-lg ml-4">Modifier</a>
                </li>
            {% endfor %}
        </ul>

        <button class="bg-red-600 text-white p-1 text-sm rounded-lg flex items-center justify-center">
            <svg class="h-3 w-3 mr-2" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><title>plus-circle</title><path d="M17,13H13V17H11V13H7V11H11V7H13V11H17M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z"/></svg>
            Ajouter un épisode
        </button>

    {% endfor %}

    <a href="{{ path('page_admin_serie_index') }}" class="underline decoration-2 decoration-red-400 hover:text-red-600 inline-flex items-center mt-4"><svg class="fill-current h-4 w-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><title>arrow-left</title><path d="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"></path></svg> Revenir à la liste des series</a>
{% endblock %}




