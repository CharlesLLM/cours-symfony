{% extends 'base_without_sidebar.html.twig' %}

{% block body %}

    <div class="flex-1 py-10 px-5 sm:px-10">

        {% set messages = app.flashes('error') %}
        {% if messages|length > 0 %}
            <div class="bg-red-100 border border-red-200 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                <strong class="font-bold">Oups !</strong>
                {% for error in messages %}
                    <span class="block sm:inline">{{ error }}</span>
                {% endfor %}
            </div>
        {% endif %}
        {% set messages = app.flashes('success') %}
        {% if messages|length > 0 %}
            <div class="bg-green-100 border border-green-200 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                <strong class="font-bold">Super !</strong>
                {% for success in messages %}
                    <span class="block sm:inline">{{ success }}</span>
                {% endfor %}
            </div>
        {% endif %}

        {% block admin %}{% endblock %}
    </div>
{% endblock %}
