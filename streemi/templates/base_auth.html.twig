{% extends 'base_without_sidebar.html.twig' %}

{% block body %}
    <section class="h-screen relative flex-1 py-5">
        <div style="background-image: url('https://blog.compose.fr/wp-content/uploads/2024/05/Marathon-Cinema.webp')" class="bg-cover bg-no-repeat h-full before:bg-black/40 before:content-[''] before:top-0 before:left-0 before:right-0 before:absolute before:w-full before:h-full">
            <div class="p-8 lg:w-1/2 mx-auto h-full flex items-center justify-center">
                <div class="bg-white rounded-lg p-8 relative w-full">
                    {% set messages = app.flashes('error') %}
                    {% if messages|length > 0 %}
                        <div class="bg-red-100 border border-red-200 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                            <strong class="font-bold">Oups !</strong>
                            {% for error in messages %}
                                <span class="block sm:inline">{{ error }}</span>
                            {% endfor %}
                        </div>
                    {% endif %}
                    {% set messages = app.flashes('success') %}
                    {% if messages|length > 0 %}
                        <div class="bg-green-100 border border-green-200 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                            <strong class="font-bold">Super !</strong>
                            {% for success in messages %}
                                <span class="block sm:inline">{{ success }}</span>
                            {% endfor %}
                        </div>
                    {% endif %}

                    {% block auth_content %}TODO{% endblock %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
