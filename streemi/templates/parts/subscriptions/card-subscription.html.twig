<li class="relative grid w-100">
    <div class="border-4 border-red-600 rounded-lg py-4 px-7">
        <div class="flex flex-row items-center justify-between">
            <div class="flex flex-col items-start justify-center">
                <h3 class="font-bold text-lg">{{ subscription.name }}</h3>
                <span class="font-medium text-gray-400 text-nowrap">{{ subscription.info }}</span>
            </div>
            <span class="text-3xl font-bold">{{ subscription.price }}€</span>
        </div>
        <p class="flex items-start justify-between mt-5 mb-8 text-md pr-3">
            {{ subscription.description }}
        </p>
        <div>
            {% if currentSubscription == subscription %}
                <span class="border-transparent transition hover:bg-gray-700 opacity-60 bg-gray-600 px-2 py-1 text-xs text-white rounded-md cursor-not-allowed">Vos possédez déjà cette offre</span>
            {% elseif(currentSubscription) %}
                <span class="border-transparent transition hover:bg-gray-700 opacity-20 bg-gray-600 px-2 py-1 text-xs text-white rounded-md cursor-not-allowed">Vous avez déjà un abonnement actif</span>
            {% else %}
                <a href="{{ path('page_subscription_pay', {id: subscription.id}) }}" class="border-transparent transition hover:bg-red-700 bg-red-600 px-4 py-3 text-md text-white rounded-md">S'abonner</a>
            {% endif %}
        </div>
    </div>
</li>
